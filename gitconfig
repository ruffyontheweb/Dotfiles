[difftool "meld"]
    trustExitCode = false
[difftool]
    prompt = false
[diff]
    tool = meld
[mergetool "meld"]
    trustExitCode = false
[mergetool]
    keepBackup = false
[merge]
    tool = meld
[core]
	editor = vim

[color]
	ui = auto
	branch = auto
        diff = auto
        interactive = auto
        status = auto

[alias]
	st = status
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	cs = commit -v
	
